{
  "index": {
    "analysis": {
      "tokenizer": {
        "edge_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 5,
          "token_chars": [
            "letter"
          ]
        }
      },
      "analyzer": {
        "desc_anal": {
          "type": "custom",
          "tokenizer": "ngram_tokenizer",
          "filter": [
            "lowercase",
            "stop",
            "snowball",
            "unique"
          ]
        },
        "name_anal": {
          "type": "custom",
          "tokenizer": "ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  }
}
